<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-md">
        <h2 class="text-2xl font-bold mb-6 text-center text-blue-700">Sign Up</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
        <div>
            <%= f.label :email, class: "block mb-1 font-semibold text-gray-700" %>
            <%= f.email_field :email, autofocus: true, class: "w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-400" %>
        </div>

        <div>
            <%= f.label :password, class: "block mb-1 font-semibold text-gray-700" %>
            <%= f.password_field :password, class: "w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-400" %>
        </div>

        <div>
            <%= f.label :password_confirmation, class: "block mb-1 font-semibold text-gray-700" %>
            <%= f.password_field :password_confirmation, class: "w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-400" %>
        </div>

        <div>
            <%= f.submit "Sign up", class: "bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700 w-full" %>
        </div>
        <% end %>

        <div class="text-center mt-6">
            <%= link_to "Already have an account? Log in", new_session_path(resource_name), class: "text-blue-600 hover:underline" %>
        </div>
    </div>
</div>