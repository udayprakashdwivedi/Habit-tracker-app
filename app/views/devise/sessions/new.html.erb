<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-md">
        <h2 class="text-2xl font-bold mb-6 text-center text-blue-700">Log In</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
        <div>
            <%= f.label :email, class: "block mb-1 font-semibold text-gray-700" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-400" %>
        </div>

        <div>
            <%= f.label :password, class: "block mb-1 font-semibold text-gray-700" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-400" %>
        </div>

        <div class="flex items-center justify-between">
            <%= f.submit "Log in", class: "bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700" %>
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-sm text-blue-600 hover:underline" %>
        </div>
        <% end %>

        <div class="text-center mt-6">
            <%= link_to "Don't have an account? Sign up", new_registration_path(resource_name), class: "text-blue-600 hover:underline" %>
        </div>
    </div>
</div>