<h1 class="text-3xl font-bold mb-6 text-center text-blue-700">Create New Habit</h1>

<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-md">
    <%= form_with model: @habit, local: true do |f| %>
    <div class="mb-5">
        <%= f.label :name, "Habit Name", class: "block text-sm font-semibold text-gray-700 mb-2" %>
        <%= f.text_field :name, placeholder: "Enter habit name", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent" %>
    </div>

    <div class="mb-5">
        <%= f.label :description, "Description (optional)", class: "block text-sm font-semibold text-gray-700 mb-2" %>
        <%= f.text_area :description, rows: 3, placeholder: "Add some details about this habit", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent" %>
    </div>

    <div>
        <%= f.submit "Create Habit", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 rounded-md transition duration-200" %>
    </div>
    <% end %>
</div>