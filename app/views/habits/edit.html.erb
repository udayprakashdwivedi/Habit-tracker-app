<h1 class="text-3xl font-bold mb-6 text-center text-gray-800">Edit Habit</h1>

<div class="max-w-md mx-auto bg-white shadow-md rounded-lg p-6">
    <%= form_with(model: @habit, local: true, class: "space-y-6") do |form| %>

    <div>
        <%= form.label :name, class: "block text-gray-700 font-semibold mb-2" %>
        <%= form.text_field :name, class: "w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
        <%= form.label :description, class: "block text-gray-700 font-semibold mb-2" %>
        <%= form.text_area :description, rows: 4, class: "w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="mt-6">
        <%= form.submit "Update Habit", class: "w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700 transition duration-200" %>
    </div>

    <% end %>

    <div class="mt-4 text-center">
        <%= link_to 'Back', habits_path, class: "text-blue-600 hover:underline" %>
    </div>
</div>